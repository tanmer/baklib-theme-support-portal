
<main class="grow">
  {%# 分类 %}
  <section class="flex-grow mx-auto mt-5 sm:px-0">
    <div class="h-full max-w-5xl py-8 mx-auto overflow-hidden">
      <div class="py-8 bg-white border rounded border-slate-200 dark:bg-slate-600 text-slate-600 dark:text-slate-50 lg:px-16">
        <div class="max-w-3xl mx-auto">
          <h1 class="mt-4 text-2xl text-center">{{ site.name }}</h1>
          <p class="mt-3 leading-6 text-center"></p>
          <div class="my-4 border-t border-slate-200"></div>

          {%# 内容 %}
          <div class="">
            <!-- Gradient bg displaying on light layout only -->
            <div class="absolute inset-0 pointer-events-none bg-gradient-to-b from-slate-50 to-white -z-10 dark:hidden" aria-hidden="true"></div>

            <div class="w-full px-4 ">
              <!-- Docs nav -->
              <nav class="">
                <ul class="text-sm">
                  {%# 首页单独展示 %}
                  <li class="mb-1">
                    <a href="/" class="relative flex items-center justify-between font-[650] text-slate-600 p-1 before:absolute before:inset-0 before:rounded before:bg-gradient-to-tr before:from-blue-400 before:to-purple-500 before:opacity-20 before:-z-10 before:pointer-events-none before:hidden dark:text-slate-200">
                      <div class="flex items-center space-x-3">
                        <svg
                          class="shrink-0"
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          xmlns="http://www.w3.org/2000/svg">
                          <path class="fill-sky-400" d="M19.888 7.804a.88.88 0 0 0-.314-.328l-7.11-4.346a.889.889 0 0 0-.927 0L4.426 7.476a.88.88 0 0 0-.314.328L12 12.624l7.888-4.82Z" />
                          <path class="fill-white dark:fill-slate-800" d="M4.112 7.804a.889.889 0 0 0-.112.43v7.892c0 .31.161.597.426.758l7.11 4.346c.14.085.3.13.464.13v-8.736l-7.888-4.82Z" />
                          <path class="fill-sky-600" d="M19.888 7.804c.073.132.112.28.112.43v7.892c0 .31-.161.597-.426.758l-7.11 4.346c-.14.085-.3.13-.464.13v-8.736l7.888-4.82Z" />
                        </svg>
                        <span>主页</span>
                      </div>
                      <div class="px-3 grow">
                        <span class="block border-t border-slate-300"></span>
                      </div>
                      <div>

                      </div>
                    </a>
                  </li>
                  {% for item in site.pages['/'].children_in_nav_menu  %}
                    {% assign sub_page_count = page.children_in_nav_menu  | size %}

                      {% if sub_page_count > 0 %}
                      <!-- 1st level -->
                      <li class="mb-1" x-data="{ open: true }">
                        <div class="relative flex items-center justify-between p-1 text-slate-800 before:absolute before:inset-0 before:rounded before:bg-gradient-to-tr before:from-blue-400 before:to-purple-500 before:opacity-20 before:-z-10 before:pointer-events-none dark:text-slate-200">
                          <div class="flex items-center space-x-3">
                            <span
                              class=""
                              @click.prevent="open = !open"
                              aria-haspopup="true"
                              :aria-expanded="open">
                              <svg
                                class="shrink-0"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg">
                                <path class="fill-purple-400" d="M19.888 7.804a.88.88 0 0 0-.314-.328l-7.11-4.346a.889.889 0 0 0-.927 0L4.426 7.476a.88.88 0 0 0-.314.328L12 12.624l7.888-4.82Z" />
                                <path class="fill-white dark:fill-slate-800" d="M4.112 7.804a.889.889 0 0 0-.112.43v7.892c0 .31.161.597.426.758l7.11 4.346c.14.085.3.13.464.13v-8.736l-7.888-4.82Z" />
                                <path class="fill-purple-600" d="M19.888 7.804c.073.132.112.28.112.43v7.892c0 .31-.161.597-.426.758l-7.11 4.346c-.14.085-.3.13-.464.13v-8.736l7.888-4.82Z" />
                              </svg>
                            </span>
                            <a href="{{ item.path  }}">
                              <span>{{ item.link_text }}</span>
                            </a>
                          </div>
                          <div class="px-3 grow">
                            <span class="block border-t border-slate-300"></span>
                          </div>
                          <div>

                          </div>
                        </div>
                        <!-- 2nd level -->
                        {% render 'tree', item: item, page: page %}
                      </li>
                    {% else %}
                      <!-- 1st level -->
                      <li class="mb-1">
                        <a href="{{item.path}}" class="relative flex items-center justify-between p-1 text-slate-800 before:absolute before:inset-0 before:rounded before:bg-gradient-to-tr before:from-blue-400 before:to-purple-500 before:opacity-20 before:-z-10 before:pointer-events-none before:hidden dark:text-slate-200">
                          <div class="flex items-center space-x-3">
                            <svg
                              class="mr-3 shrink-0"
                              width="24"
                              height="24"
                              viewBox="0 0 24 24"
                              xmlns="http://www.w3.org/2000/svg">
                              <path class="fill-sky-400" d="M19.888 7.804a.88.88 0 0 0-.314-.328l-7.11-4.346a.889.889 0 0 0-.927 0L4.426 7.476a.88.88 0 0 0-.314.328L12 12.624l7.888-4.82Z" />
                              <path class="fill-white dark:fill-slate-800" d="M4.112 7.804a.889.889 0 0 0-.112.43v7.892c0 .31.161.597.426.758l7.11 4.346c.14.085.3.13.464.13v-8.736l-7.888-4.82Z" />
                              <path class="fill-sky-600" d="M19.888 7.804c.073.132.112.28.112.43v7.892c0 .31-.161.597-.426.758l-7.11 4.346c-.14.085-.3.13-.464.13v-8.736l7.888-4.82Z" />
                            </svg>
                            <span>{{ item.link_text }}</span>
                          </div>
                          <div class="px-3 grow">
                            <span class="block border-t border-slate-300"></span>
                          </div>
                          <div>

                          </div>
                        </a>
                      </li>
                    {% endif %}
                  {% endfor %}
                  <!-- 1st level -->

                </ul>
              </nav>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

</section>


{% schema %}
  {
    "name": "List directory theme",
    "thumb_url": "images/theme/index-list.png",
    "preview_image_urls": [
        "images/theme/index-list.png"
    ],
    "description": "Display multi-level pages in the form of a list",
    "sub_page_templates": [
      "page"
    ]
  }
{% endschema %}
