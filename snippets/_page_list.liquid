<div class="mt-4">
  <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 xl:grid-cols-4 ">
    {% for page in pages %}
      <div class="p-2 md:p-4 bg-white hover:bg-primary-100 dark:bg-slate-800 text-slate-800 dark:text-slate-200 flex flex-col rounded-md space-y-3 md:space-y-5 shadow-[0_2px_24px_rgba(28,76,186,.08)]">
        <div class="flex items-center justify-start">
          {% if page.settings.icon %}
            <span class="mr-4"><img src="{{ page.settings.icon }}" class="h-6"/> </span>
          {% endif %}
          <a class="text-base font-semibold hover:text-primary" href="{{ page.path }}">
            <p class="line-clamp-3">{{ page.link_text }}</p>
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
