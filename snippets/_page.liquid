<article class="flex justify-between xl:space-x-12 grow">
  <div class="flex flex-col w-full grow">
    <h1 class="flex items-center mb-2 text-2xl font-bold sm:text-3xl xl:text-4xl text-slate-800 dark:text-slate-200">
      {{ page.link_text }}
    </h1>
    <p class="text-xs text-gray-400">{{ page.published_at }}</p>

    {% if page.settings.tags.size > 0 %}
      <div class="flex flex-wrap items-center gap-4 my-2 md:my-4">
        <span>{{ 'generic.tags' | t }}：</span>
        {% for tag in page.settings.tags %}
          <a
            href="{{ tag.path }}"
            data-turbo-frame="_top"
            class="inline-flex items-center transition-all duration-200 hover:-translate-y-[2px]"
          >
            {% render 'tag', tag: tag %}
          </a>
        {% endfor %}
      </div>
    {% endif %}


    <div class="mt-4 space-y-6 text-slate-600 dark:text-slate-400 ProseMirror grow" data-controller="view_images">
      <div class="mt-8 flow-root">
        <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="py-2 align-middle sm:px-6 lg:px-8">
            {{ page.settings.content }}
          </div>
        </div>
      </div>
    </div>

  </div>
  {% # 页内目录导航 %}
  <nav class="hidden w-48 xl:block shrink-0" data-controller="menu">
    <div class="fixed w-48 pt-32 pb-8 overflow-y-auto scrollbar top-24">
      <div class="border-l border-slate-200 dark:border-slate-800">
        <div class="text-sm max-h-[380px] bg-white dark:bg-slate-900 space-y-3 overflow-y-auto" data-menu-target="links"></div>
      </div>
    </div>
  </nav>
</article>

